package main

import (
  "net/http"
  "fmt"
)

func handleName(w http.ResponseWriter, r http.Request) {
  w.WriteHeader(http.StatusOK)
  
  name := r.URL.Path
  fmt.Fprintln(w, "Hello, %s!", name)
}

func main() {
  mux := http.NewServeMux()
  mux.HandleFunc("/hello/", http.StripPrefix("/hello/", handleName))
  
  server := http.Server {
    Addr: ":8080",
  }
}
